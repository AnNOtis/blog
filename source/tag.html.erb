---
pageable: true
per_page: 12
---


<h2>Articles tagged
  <span class="tag">
    <span class="tag-color <%= tagname.downcase %>"></span><%= tagname %>
  </span>
</h2>


<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="article-list">
  <% page_articles.each_with_index do |article, i| %>
    <li>
      <span class="date"><%= article.date.strftime('%Y.%m.%d') %></span>
      <span class="title"><%= link_to article.title, article %></span>
        <!-- <div class="summary"><%= article.summary %></div> -->
    </li>
  <% end %>
</ul>

<div class="tag-collection">
  <% blog.tags.each do |tag, articles| %>
    <span class="tag">
      <span class="tag-color <%= tag.downcase %>"></span>
      <%= link_to "#{tag} (#{articles.size})", tag_path(tag) %>
    </span>
  <% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
