<% wrap_layout :layout do %>
  <% title current_article.title %>
  <% description current_article.summary(200) %>
  <% keywords current_article.tags.join(', ') %>
  <div class="symbol"></div>
  <div class="titleBlock">
    <h1><%=current_article.title %></h1>
    <span class="date"><%= current_article.date.strftime('%^B %e, %Y') %></span>
    <% current_article.tags.each do |tag| %>
      <span class="tag" data-color="#345"><span class="tag-color <%= tag.downcase %>"></span><%= link_to "#{tag}", tag_path(tag) %></span>
    <% end %>
  </div>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <article class="content">
    <%= yield %>
  </article>
  <div class="social-plugin">
    <div class="fb-share-button" data-href="" data-layout="button_count"></div>
  </div>
  <%= disqus %>
<% end %>
<script>

</script>